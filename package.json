{
  "name": "home-services",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --parallel",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "npm install pm2@latest -g && husky install",
    "postinstall": "yarn run prepare",
    "setup:secrets": "ts-node-esm --project packages/tsconfig/build-scripts.json scripts/create-config.ts",
    "start": "yarn run build && pm2 start ecosystem.config.js"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/prettier": "^2.7.0",
    "chalk": "4.1.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "prompts": "^2.4.2",
    "ts-node": "^10.9.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "typescript": "^4.8.3"
  }
}
