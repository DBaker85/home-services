{
  "name": "home-services",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "yarn run build:code && yarn run build:docker && yarn run setup",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "postinstall": "yarn run prepare",
    "setup": "node apps/setup-scripts/dist/index.js",
    "build tasks": "--------------------------------------------------------",
    "build:code": "dotenv -- turbo build --parallel",
    "build:docker": "turbo run docker --parallel"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@types/node": "^18.7.18",
    "@types/prettier": "^2.7.0",
    "chalk": "4.1.2",
    "dotenv-cli": "^7.2.1",
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "prompts": "^2.4.2",
    "ts-node": "^10.9.1",
    "turbo": "1.13.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.4.1",
  "dependencies": {
    "esbuild": "^0.19.0",
    "typescript": "^5.1.6"
  }
}
