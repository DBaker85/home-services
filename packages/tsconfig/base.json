{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "module": "es2022",
    "composite": false,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "exclude": ["node_modules"]
}
